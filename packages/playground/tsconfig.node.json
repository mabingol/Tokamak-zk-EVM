{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2020", // Node.js ES2020+ compatibility
    "lib": ["ES2020"], // Align with Node.js capabilities
    "module": "CommonJS", // Use CommonJS for Node.js modules
    "skipLibCheck": true,
    "types": ["node"], // Ensure Node.js types are included

    /* Adjust Module Resolution */
    "moduleResolution": "node", // Use Node.js resolution
    "allowImportingTsExtensions": false, // Not needed for Node.js
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false, // Enable emitting JS files
    "outDir": "./dist", // Specify output directory for compiled files

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "noImplicitAny": false,
  },
  "include": ["utils/**/*.ts"], // Include server-related TypeScript files
  "exclude": ["node_modules", "dist"] // Exclude unnecessary files
}
